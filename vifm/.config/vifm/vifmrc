set vicmd=vim
set syscalls
set nofollowlinks
set sortnumbers
set undolevels=100
set wildmenu
set wildstyle=popup
set scrolloff=4
set ignorecase
set smartcase
set nohlsearch
set incsearch
set statusline="  Hint: %z%= %A %10u:%-7g %15s %20d  "
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set trash
colorscheme zenburn_1

map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <C-o> <C-w>o
map <C-s> <C-w>s
map <C-v> <C-w>v

map R :restart<CR>
nnoremap o :file &<cr>
map E :!vim %f<CR>
map mkd :mkdir<space>
map tkd :take<space>
nnoremap s :shell<cr>
nnoremap w :view<cr>
vnoremap w :view<cr>gv
nnoremap yd :!echo %d | xsel %i<cr>
nnoremap yf :!echo %c:p | xsel %i<cr>
nnoremap I cw<c-a>
nnoremap J cW<c-u>
nnoremap cc cw<c-u>
nnoremap A cw
nnoremap ,w :set wrap!<cr>
nmap <space> tj
nmap q ZZ
map > :!vifmimg inc<CR>
map < :!vifmimg dec<CR>

command! take :mkdir %a | cd %a

fileview */ tree %c -L 1 --dirsfirst
fileview ../ tree %c -L 1 --dirsfirst
fileviewer *.html w3m -dump %c
filextype *.html,*.htm chromium %f 2>/dev/null &!,code %f &!

fileviewer *.docx docx2txt %c -
filextype *.docx,*.doc,*.odt libreoffice6.3 --nologo --writer %c &!
fileviewer *.odt odt2txt %c -

filextype *.pptx,*.ppt,*.odf libreoffice6.3 --nologo --impress %c &!
filetype *.csv,*.xlsx libreoffice6.3 --nologo --calc %c &!
fileviewer *.csv sed "s/,,,,/,,-,,/g;s/,,/ /g" %c | column -t | sed "s/ - /  /g" | cut -c -%pw

filetype *.wav,*.mp3,*.flac,*.m4a,*.wma,*.ape,*.ac3,*.og[agx],*.spx,*.opus cmus
filextype *.pdf,*.ps,*.eps,*.ps.gz,*.djvu,*.epub zathura %f 2>/dev/null &!,atril %f 2>/dev/null &!
" fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.qt,*.divx,*.as[fx],*mp3,*.flac file
filextype *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx,*.as[fx] mpv %f --terminal=no &!

fileviewer *.[1-8] man ./%c | col -b
filetype *.[1-8] man ./%c

" fileviewer *.jpg,*.jpeg,*.png,*.ico vifmimg draw %px %py %pw %ph %c %pc vifmimg clear
filextype *.bmp,*.jpg,*.jpeg,*.png,*.ico,*.gif,*.xpm  ristretto %f 2>/dev/null | sxiv -ia 2>/dev/null &!

filextype *.svg inkscape %f 2>/dev/null &!
filextype *.xcf gimp %f 2>/dev/null &!

fileviewer *.pdf
      " \ vifmimg pdfpreview %px %py %pw %ph %c
      " \ %pc
      " \ vifmimg clear,
        \ pdftotext -f 1 -l 5 -nopgbrk %c -

fileviewer *.epub
        \ vifmimg epubpreview %px %py %pw %ph %c
        \ %pc
        \ vifmimg clear

fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,
        \*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx,
        \ vifmimg videopreview %px %py %pw %ph %c
        \ %pc
        \ vifmimg clear

fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.xpm
        \ vifmimg draw %px %py %pw %ph %c
        \ %pc
        \ vifmimg clear

fileviewer *.gif
        \ vifmimg gifpreview %px %py %pw %ph %c
        \ %pc
        \ vifmimg clear

fileviewer *.ico
        \ vifmimg magickpreview %px %py %pw %ph %c
        \ %pc
        \ vifmimg clear


set vifminfo=dhistory,chistory,tui,shistory,phistory,fhistory,dirstack,registers,bookmarks,bmarks
